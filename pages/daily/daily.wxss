/* pages/daily/daily.wxss */
.body {
  background-color: rgba(206, 224, 216, 0.945);
}

.time {
  margin: 0 auto;
  width: 90%;
  padding: 30rpx 0;
  background-color: pink;
  border-radius: 10rpx;
  height: 60rpx;
  text-align: center;
}

.banner {
  margin: 0 auto;
  padding: 30rpx 30rpx;
  width: 90%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.add {
  margin: 0 auto;
  width: 90%;
  background-color: #fff;
  height: 100rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 70rpx;
  font-weight: 300;
}
.list {
  background-color: skyblue;
  margin: 30rpx auto;
  width: 90%;
  border-radius: 10rpx;
  height: 100%;
}

.title {
  font-size: 40rpx;
  text-align: center;
}